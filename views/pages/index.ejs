<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!--Internal CSS-->
    <!-- <link rel="stylesheet" href="../CSS/style.css" /> -->
    <title><%= title %></title>
    <style>
      body{
        background-color: rgb(40,45,50);
        height: auto;
        overflow-y: auto;
        overflow-x: hidden;
      }

      .recommend{
        overflow-x: auto;
      }
    </style>
  </head>
  <body class="">
    <!--Navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid d-flex align-items-center">
        <img src="image/logo.png" alt="" style="width: 50px; height: 50px" />
        <a class="ms-2 navbar-brand" href="#">Comac Comic</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="comic.html">Comic</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!--Navbar-->

    <div class="container-fluid mt-3">
      <p class="text-light d-block ms-5">Recommended</p>
      <!-- Recommend -->
      <div class="recommend d-flex flex-row my-3 flex-nowrap">
        <!-- looping data -->
        <% for(let i = 1; i <= 10; i++){ %>
        <% comics.forEach( (comic)=>{ %>
        <div class="card bg-secondary ms-3" style="min-width: 18rem;">
          <img src="<%=comic.comicPoster%>" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= comic.comicTitle %></h5>
            <p class="card-text"><%= comic.comicDesc %> </p>
            <div class="d-flex justify-content-between">
              <a href="#" class="btn btn-primary">Read First</a>
              <a href="#" class="btn btn-primary">Details</a>
            </div>
          </div>
        </div>
        <%})%>
        <%}%>
        <!---->
      </div>
      <!-- end of recommend -->

    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

